{% extends 'templates/app.twig' %}

 {% block content %}
     <div class="row">
         <div class="col-md-6 offset-md-3">
             <div class="card w-100">
                 <div class="card-header">
                     sign in
                 </div>
                 <div class="card-body">
                     <form action="{{ path_for('auth.signin') }}" method="post">
                         <div class="form-group ">
                             <label for="email">Email</label>
                             <input type="email" name="email" id="email" placeholder="example@gmail.com" value="{{ old.email }}"
                                    class="form-control {{ errors.email ? 'is-invalid' : '' }}">
                             {% if errors.email %}
                             <span class="help-block text-danger">{{ errors.email |first }}</span>
                             {% endif %}
                         </div>
                         <div class="form-group">
                             <label for="password">password</label>
                             <input type="password" name="password" id="password" placeholder="write password"
                                    class="form-control  {{ errors.password ? 'is-invalid' : '' }}">
                              {% if errors.password %}
                             <span class="help-block text-danger">{{ errors.password |first }}</span>
                             {% endif %}
                         </div>
                         <button type="submit" class="btn btn-default">Sign in</button>

                         {{ csrf.field | raw}}

                     </form>
                 </div>
             </div>
         </div>
     </div>
 {% endblock %}